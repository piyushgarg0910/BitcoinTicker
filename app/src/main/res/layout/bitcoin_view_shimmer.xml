<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bitcoinViewContainer">

    <androidx.cardview.widget.CardView
        android:elevation="@dimen/card_view_elevation"
        android:id="@+id/bitcoinCurrencyContainerShimmer"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_height"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        android:backgroundTint="@color/color_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:background="@color/white"
            android:id="@+id/bitcoinCountryShimmer"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/bitcoin_country_margin_top"
            android:layout_width="@dimen/bitcoin_country_shimmer_width"
            android:layout_height="@dimen/dimens_12x"/>

        <View
            android:background="@color/white"
            android:id="@+id/bitcoinCurrencyShimmer"
            android:layout_width="@dimen/dimens_12x"
            android:layout_height="@dimen/bitcoin_currency_shimmer_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/bitcoin_currency_margin_top"/>

    </androidx.cardview.widget.CardView>

    <View
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bitcoinCurrencyContainerShimmer"
        android:id="@+id/bitcoinValueShimmer"
        android:layout_marginTop="@dimen/bitcoin_value_margin_top"
        android:background="@color/color_1"
        android:layout_width="@dimen/bitcoin_value_shimmer_width"
        android:layout_height="@dimen/dimens_12x"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bitcoinValueShimmer"
        android:id="@+id/bitcoinUpdateAtShimmer"
        android:layout_marginTop="@dimen/dimens_6x"
        android:background="@color/color_1"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/dimens_12x"
        android:layout_height="@dimen/dimens_8x"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bitcoinUpdateAtShimmer"
        android:id="@+id/bitcoinUpdateDateShimmer"
        android:layout_marginTop="@dimen/dimens_6x"
        android:background="@color/color_1"
        android:layout_width="@dimen/bitcoin_update_date_shimmer_width"
        android:layout_height="@dimen/dimens_8x"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bitcoinUpdateDateShimmer"
        android:id="@+id/bitcoinUpdateTimeShimmer"
        android:layout_marginTop="@dimen/dimens_4x"
        android:background="@color/color_1"
        android:layout_width="@dimen/bitcoin_update_date_shimmer_width"
        android:layout_height="@dimen/dimens_8x"
        android:layout_marginBottom="@dimen/bitcoin_update_time_margin_bottom"/>

    <TextView
        android:id="@+id/bitcoinUpdateAtDateShimmer"
        android:layout_width="@dimen/bitcoin_value_shimmer_width"
        android:layout_height="@dimen/dimens_4x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_1"
        android:layout_marginEnd="@dimen/dimens_4x"
        android:layout_marginBottom="@dimen/dimens_4x"/>

</androidx.constraintlayout.widget.ConstraintLayout>
