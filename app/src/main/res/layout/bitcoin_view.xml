<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bitcoinViewContainer">

    <androidx.cardview.widget.CardView
        android:elevation="@dimen/card_view_elevation"
        android:id="@+id/bitcoinCurrencyContainer"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_height"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/bitcoinCountry"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/bitcoin_country_margin_top"
            android:textStyle="bold"
            android:textSize="@dimen/heading_2_text_size"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/bitcoinCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/bitcoin_currency_margin_top"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/heading_1_text_size"/>

    </androidx.cardview.widget.CardView>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bitcoinCurrencyContainer"
        android:id="@+id/bitcoinValue"
        android:layout_marginTop="@dimen/bitcoin_value_margin_top"
        android:textSize="@dimen/heading_2_text_size"
        android:textStyle="bold"
        android:textColor="@color/color_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bitcoinValue"
        android:id="@+id/bitcoinUpdateAt"
        android:layout_marginTop="@dimen/dimens_6x"
        android:textSize="@dimen/heading_3_text_size"
        android:text="@string/at"
        android:textStyle="bold"
        android:textColor="@color/color_1"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bitcoinUpdateAt"
        android:id="@+id/bitcoinUpdateDate"
        android:layout_marginTop="@dimen/dimens_6x"
        android:textSize="@dimen/heading_3_text_size"
        android:textStyle="bold"
        android:textColor="@color/color_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bitcoinUpdateDate"
        android:id="@+id/bitcoinUpdateTime"
        android:layout_marginTop="@dimen/dimens_4x"
        android:textSize="@dimen/heading_3_text_size"
        android:textStyle="bold"
        android:textColor="@color/color_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bitcoin_update_time_margin_bottom"/>

    <TextView
        android:id="@+id/bitcoinUpdateAtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/dimens_4x"
        android:layout_marginBottom="@dimen/dimens_4x"
        android:textColor="@color/color_1"
        android:textSize="@dimen/body_2_text_size"/>

</androidx.constraintlayout.widget.ConstraintLayout>
